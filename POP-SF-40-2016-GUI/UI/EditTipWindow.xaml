        xmlns:local="clr-namespace:POP_SF_40_2016_GUI.UI"
        mc:Ignorable="d"
        Title="EditTipWindow" Height="158.005" Width="466.357" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
