        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Naziv:" HorizontalAlignment="Left" Height="33" Margin="20,21,0,0" VerticalAlignment="Top" Width="100" FontSize="20"/>
        <TextBox HorizontalAlignment="Left" Height="33" Margin="136,21,0,0" TextWrapping="Wrap" Text="{Binding Path=Naziv}" VerticalAlignment="Top" Width="298" Name="tbNaziv"/>
