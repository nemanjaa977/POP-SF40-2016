        <Button x:Name="btnSacuvaj" Content="Sacuvaj" HorizontalAlignment="Left" Height="23" Margin="284,10.4,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="SacuvajProzor" Background="White" BorderBrush="#FF34FF00" Foreground="#FF00FF0C"/>

    </Grid>
</Window>
