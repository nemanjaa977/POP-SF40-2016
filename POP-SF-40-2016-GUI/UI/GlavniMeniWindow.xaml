        <Button x:Name="btnOdjava" Content="Odjavite se" HorizontalAlignment="Left" Height="24" Margin="10,305,0,0" VerticalAlignment="Top" Width="596" Click="Odjava" Background="#FFDAD412" FontStyle="Italic" BorderBrush="#FFDAD412"/>
