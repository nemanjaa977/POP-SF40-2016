        <Button x:Name="btnPrikaziTip" Content="Tip namestaja" HorizontalAlignment="Left" Height="26" Margin="408,98,0,0" VerticalAlignment="Top" Width="94" Click="PrikaziTipNamestaja" Background="#FF4658BA" BorderBrush="#FF0315C7" FontStyle="Italic"/>
