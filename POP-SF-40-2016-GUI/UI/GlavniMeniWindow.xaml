        <Button x:Name="btnProdaja" Content="Prodaja namestaja" HorizontalAlignment="Left" Height="26" Margin="266,138,0,0" VerticalAlignment="Top" Width="102" Click="PrikaziProdajuNamestaja_Click" Background="#FF4658BA" BorderBrush="#FF0315C7" FontStyle="Italic"/>
        <Button x:Name="btnIspisiSalon" Content="Informacije o salonu" HorizontalAlignment="Left" Height="26" Margin="10,303,0,0" VerticalAlignment="Top" Width="596" Background="#FFCAC52A" BorderBrush="#FFD6D136" FontStyle="Italic" Click="IspisiSalon"/>
    </Grid>
</Window>
